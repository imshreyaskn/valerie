# Valerie Configuration Template
# Copy this to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=Valerie
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=true
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# API Server
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================================
# AWS Bedrock Configuration
# ============================================================================
# Get these from AWS IAM Console
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1

# Model Configuration
# Available models: 
#   - anthropic.claude-3-5-sonnet-20241022-v2:0 (recommended)
#   - anthropic.claude-3-opus-20240229-v1:0
#   - anthropic.claude-3-haiku-20240307-v1:0
AWS_ATTACKER_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
AWS_JUDGE_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
AWS_MAX_TOKENS=4096
AWS_TEMPERATURE=0.7

# ============================================================================
# PostgreSQL Database
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=valerie_db
POSTGRES_USER=valerie_user
POSTGRES_PASSWORD=your_secure_password_here

# Connection Pool Settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ============================================================================
# LLM Operation Timeouts
# ============================================================================
LLM_TIMEOUT_SECONDS=300  # 5 minutes max per LLM call
ATTACK_MAX_ITERATIONS=5  # Max refinement cycles

# ============================================================================
# NOTES:
# ============================================================================
# 1. For AWS credentials, create an IAM user with Bedrock access
# 2. Ensure your AWS account has Bedrock model access enabled
# 3. Use strong passwords for production databases
# 4. Consider using AWS Secrets Manager for production credentials