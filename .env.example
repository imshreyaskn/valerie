# Valerie Configuration
# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=Valerie
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# API Server
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================================
# AWS Bedrock Configuration
# ============================================================================
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1

# Model Configuration
AWS_ATTACKER_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
AWS_JUDGE_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
AWS_MAX_TOKENS=4096
AWS_TEMPERATURE=0.7

# ============================================================================
# Mistral Configuration (from Selene)
# ============================================================================
MISTRAL_API_KEY=your_mistral_api_key_here
DEFAULT_MODEL=mistral-small-latest

# ============================================================================
# PostgreSQL Database
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=valerie_db
POSTGRES_USER=valerie_user
POSTGRES_PASSWORD=your_secure_password_here

# Connection Pool Settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ============================================================================
# LLM Operation Timeouts
# ============================================================================
LLM_TIMEOUT_SECONDS=300
ATTACK_MAX_ITERATIONS=5
